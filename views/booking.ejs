<%- include('header') %>
    <script>
        function rate() {
            var p = document.getElementById("r_price").value;
            var from = document.getElementById("b_date_f").value;
            var to = document.getElementById("b_date_t").value;
            var last_f = from.toString().slice(-2);
            var last_t = to.toString().slice(-2);
            var result = parseInt(last_t) - parseInt(last_f);
            if (result > 0) {
                mult1 = p * result
                document.getElementById("r_price").value = mult1
            } else {
                alert('Date must be enter increased from entrance date of hotel   ');
            }


            //alert(mult1);
        }
    </script>

