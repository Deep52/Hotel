<%- include('header') %>

    <div class="p_wrapper col3">
        <div id="gallery" style="height: 600px;">

            <div id="p_wrapper">
                <form action="register" method="post">
                    <table style="width:100%;    width: 100%; padding: 5px;    font-size: 15px;">
                        <tr>
                            <td></td>
                            <td>
                                <% if(record.msg==''){ %>
                                    <p>&nbspPlease Fill Your Information</p>
                                    <% } else{ %>
                                        <p>
                                            <%= record.msg %>
                                        </p>
                                        <% } %>
                            </td>
                        </tr>

                        <tr>
                            <td>Customer Name</td>
                            <td><input id="c_name" class="txt" name="c_name" type="text" value="" required/></td>
                        </tr>

                        <tr>
                            <td>Customer Email </td>
                            <td><input id="c_email" class="" name="c_email" type="email " value="" required style="width: 277px;
                                    height: 32px;border-radius: 6px;" /></td>
                        </tr>



                        </tr>
                        <tr>
                            <td>Customer Address </td>
                            <td><input id="c_address" class="txt" name="c_address" type="text" value="" /></td>
                        </tr>
                        <tr>
                            <td> Card Type </td>
                            <td> <select name="c_cardtype" id="c_cardtype" value="" class="txt" style="" required>
                                <option value="" id=""></option>
                                <option value="V" >Visa Card</option>
                                <option value="MC">Master Card</option>
                                <option value="DC">Debit Card</option>
                            </select>

                            </td>
                        </tr>
                        <tr>
                            <tr>
                                <td> Enter Card Number </td>
                                <td><input id="c_card_no" class="" name="c_card_no" type="number" value="" required style="width: 280px;
                                    height: 32px; border-radius: 6px;" /></td>
                            </tr>
                            <tr>
                                <td>Card expire date </td>
                                <td><input id="ex_card_date" name="ex_card_date" class="" type="month" value="" style="    width: 280px;
                                        height: 32px; border-radius: 6px;" required/></td>
                            </tr>
                            <tr style="border-bottom: 1px solid #D4791A;">
                                <td></td>
                                <td><button class="bt" type="submit" value="" />Submit</button>
                                </td>
                            </tr>
                    </table>


                </form>

            </div>
        </div>
    </div>
    </div>
    <%- include('footer') %>
